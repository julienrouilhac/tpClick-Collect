{% extends 'base.html.twig' %}

{% block title %}Magasin index{% endblock %}

{% block body %}
    <h1>Magasin index</h1>

<a href="/register"><button>Register</button></a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for magasin in magasins %}
            <tr>
                <td>{{ magasin.id }}</td>
                <td>{{ magasin.name }}</td>
                <td>{{ magasin.adresse }}</td>
                <td>
                    <a href="{{ path('magasin_show', {'id': magasin.id}) }}">show</a>
                    <a href="{{ path('magasin_edit', {'id': magasin.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('magasin_new') }}">Create new</a>
   {% endif %} 
{% endblock %}
