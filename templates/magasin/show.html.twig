{% extends 'base.html.twig' %}

{% block title %}Magasin{% endblock %}

{% block body %}
    <h1>Magasin</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ magasin.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ magasin.name }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ magasin.adresse }}</td>
            </tr>
            <tr>
                <th>Produit</th>
                {% for next in magasin.produits %}
                <td>{{ next }} 

                {% if next.stock > 0 %}
                (En stock)
                {% else %}
                (Pas en stock)
                {% endif %}
                </td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('magasin_index') }}">back to list</a>

 {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('magasin_edit', {'id': magasin.id}) }}">edit</a>
{% endif %}
    {{ include('magasin/_delete_form.html.twig') }}
{% endblock %}
