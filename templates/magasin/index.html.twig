{% extends 'base.html.twig' %}


{% block title %}Liste des magasins{% endblock %}


{% block body %}
    <h1>Liste des magasins</h1>


<style>


</style>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for magasin in magasins %}
            <tr>
                <td>{{ magasin.id }}</td>
                <td>{{ magasin.name }}</td>
                <td>{{ magasin.adresse }}</td>
                <td>
                    <a href="{{ path('magasin_show', {'id': magasin.id}) }}">show</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('magasin_edit', {'id': magasin.id}) }}">edit</a>
                     {% endif %} 
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('magasin_new') }}">Ajouter un magasin</a>
   {% endif %} 
{% endblock %}
